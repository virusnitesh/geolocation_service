<!doctype html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <style>
            div.container {
                width: 98%;
                margin: 1%;
            }

            progress {
                position: relative;
                width: 100%;
                height: 25px;
                appearance: none;
                -webkit-appearance: none;
            }

            progress::-webkit-progress-bar {
                background-color: #eee;
                border-radius: 8px;
            }

            progress::-webkit-progress-value {
                background-color: #276bd1;
                border-radius: 8px;
            }

            #customers {
                font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
                border-collapse: ;
                width: 100%;
                margin-left: auto;
                margin-right: auto;
            }

            #customers td,
            #customers th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #customers tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #customers tr:hover {
                background-color: #ADD8E6;
            }

            #customers th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #3498DB;
                color: white;
            }
        </style>
    </head>
    <body class="body">
        <main>
            <div class="cotainer">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h3 class ="heading-reset"> Search geo data </h3>
                            </div>
                            <div class="card-body">
                                <form class="form-horizontal" action="" method="post" id="search-form">
                                    <input type="hidden" name="_csrf_token" value="<%= Phoenix.Controller.get_csrf_token() %>">
                                    <div class="form-group row">
                                        <label class="col-md-4 col-form-label text-md-right" for="ip">IP Address</label>
                                        <div class="col-md-6">
                                            <input type="text" id="ip" class="form-control"  name="ip" placeholder="type your ip here.." required />
                                        </div>
                                    </div>
                                    <div class="col-md-6 offset-md-4">
                                        <button type="submit" alignment="right" class="btn btn-primary">Search</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br><br>
            <%= if is_map(@geo_data) do %>
                <table id="customers">
                    <thead>
                        <tr>
                            <th>IP</th>
                            <th>Country Code</th>
                            <th>Country</th>
                            <th>City</th>
                            <th>Latitude</th>
                            <th>Longitude</th>
                            <th>Mystry value</th>
                        </tr>
                    </thead>
                    <tbody  id="status">
                        <tr>
                            <td><%= @geo_data.ip %></td>
                            <td><%= @geo_data.country_code %></td>
                            <td><%= @geo_data.country %></td>
                            <td><%= @geo_data.city %></td>
                            <td><%= @geo_data.latitude %></td>
                            <td><%= @geo_data.longitude %></td>
                            <td><%= @geo_data.mystery_value %></td>                        
                        </tr>
                    </tbody>
                </table>
            <% end %>
        </main>
    </body>
</html>
